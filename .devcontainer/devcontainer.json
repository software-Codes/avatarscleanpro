{
    "name": "avatarcleanpro-dev-client",
    "build": {
        "dockerfile": "Dockerfile.dev"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            },
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "ms-azuretools.vscode-docker",
                "eamodio.gitlens",
                "GitHub.copilot",
                "kisstkondoros.vscode-gutter-preview",
                "n3rds-inc.image",
                "jock.svg"
            ]
        }
    },
    "postCreateCommand": "sh -c \"if [ -f package.json ]; then npm install; else echo 'No package.json found; skipping npm install.'; fi\"",
    "forwardPorts": [
        3000
    ],
    "portsAttributes": {
        "3000": {
            "label": "Dev server",
            "onAutoForward": "notify"
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "version": "latest",
            "enableNonRootDocker": "true"
        }
    },
    "remoteUser": "node"
}